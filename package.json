        "drizzle-orm": "^0.31.2",
        "hono": "^4.4.7",
        "mysql2": "^3.10.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bun": "^1.1.5",
        "drizzle-kit": "^0.22.7"
    }
